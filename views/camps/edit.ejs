<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Edit Camp</h1>
	<div class="col-md-6 offset-md-3">
		<form
			action="/camps/<%= camp._id %>?_method=PUT"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data">
			<div class="mb-3">
				<label class="form-label" for="title">Camp Name:</label>
				<input
					class="form-control"
					type="text"
					name="camp[title]"
					id="title"
					value="<%= camp.title %>"
					required />
				<div class="invalid-feedback">Please enter a name for the camp.</div>
			</div>
			<div class="mb-3">
				<label for="formFileMultiple" class="form-label"
					>Upload more images</label
				>
				<input
					class="form-control"
					type="file"
					id="formFileMultiple"
					name="image"
					multiple />
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location:</label>
				<input
					class="form-control"
					type="text"
					name="camp[location]"
					id="location"
					value="<%= camp.location %>"
					required />
				<div class="invalid-feedback">Please enter a valid location.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Price:</label>
				<div class="input-group mb-3">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						class="form-control"
						placeholder="0.00"
						aria-label="price"
						aria-describedby="price-label"
						name="camp[price]"
						value="<%= camp.price %>"
						required />
					<div class="invalid-feedback">
						Please enter a valid price greater or equal to $0.00.
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description:</label>
				<textarea
					class="form-control"
					type="text"
					name="camp[description]"
					id="description"
					required>
<%= camp.description %></textarea
				>
				<div class="invalid-feedback">
					Please give a description of the camp.
				</div>
			</div>
			<div class="mb-3">
				<% camp.images.forEach(function(img, i) { %>
				<img class="img-thumbnail" src="<%= img.thumbnail %>" alt="" />
				<div class="form-check-inline">
					<input
						type="checkbox"
						name="deleteImages[]"
						id="del<%= i %>"
						value="<%= img.filename %>" />
				</div>
				<label for="del<%= i %>">Delete?</label>
				<% }) %>
			</div>
			<button class="btn btn-info" type="submit">Update</button>
		</form>
	</div>
</div>
<div class="mb-2">
	<a class="btn btn-secondary" href="/camps/<%= camp._id %>"> Go back</a>
</div>
