<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">New Camp</h1>
	<div class="col-md-6 offset-md-3">
		<form
			action="/camps"
			method="POST"
			novalidate
			class="needs-validation"
			enctype="multipart/form-data">
			<div class="mb-3">
				<label class="form-label" for="title">Camp Name:</label>
				<input
					class="form-control"
					type="text"
					name="camp[title]"
					id="title"
					required />
				<div class="invalid-feedback">Please enter a name for the camp.</div>
			</div>
			<div class="mb-3">
				<label for="formFileMultiple" class="form-label">Upload images</label>
				<input
					class="form-control"
					type="file"
					id="formFileMultiple"
					name="image"
					multiple />
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location:</label>
				<input
					class="form-control"
					type="text"
					name="camp[location]"
					id="location"
					required />
				<div class="invalid-feedback">Please enter a valid location.</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="price">Price:</label>
				<div class="input-group mb-3">
					<span class="input-group-text" id="price-label">$</span>
					<input
						type="text"
						class="form-control"
						placeholder="0.00"
						aria-label="price"
						name="camp[price]"
						aria-describedby="price-label"
						required />
					<div class="invalid-feedback">
						Please enter a valid price greater or equal to $0.00.
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label class="form-label" for="description">Description:</label>
				<textarea
					class="form-control"
					type="text"
					name="camp[description]"
					id="description"
					required></textarea>
				<div class="invalid-feedback">
					Please give a description of the camp.
				</div>
			</div>
			<button class="btn btn-success" type="submit">Add New Camp</button>
		</form>
	</div>
</div>
<a class="btn btn-primary" href="/camps">All Camps</a>
